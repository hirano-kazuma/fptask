<% if current_user.role_fp? %>
  <% provide(:title, "予約申請一覧") %>
  <h1>予約申請一覧</h1>

  <% if @bookings.empty? %>
    <div class="alert alert-info">
      予約申請がありません。
    </div>
  <% else %>
    <table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>予約日時</th>
      <th>予約者</th>
      <th>予約内容</th>
          <th>ステータス</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        <% @bookings.each do |booking| %>
          <%= render "fp_booking_row", booking: booking %>
        <% end %>
      </tbody>
    </table>
  <% end %>

  <%= link_to "予約枠一覧に戻る", time_slots_path, class: "btn btn-primary mt-3" %>
<% else %>
  <% provide(:title, "予約一覧") %>
  <h1>予約一覧</h1>

  <% if @bookings.empty? %>
    <div class="alert alert-info">
      予約がありません。
    </div>
    <%= link_to "予約可能な枠を見る", time_slots_path, class: "btn btn-primary" %>
  <% else %>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>予約日時</th>
          <th>FP</th>
          <th>予約内容</th>
          <th>ステータス</th>
      <th>操作</th>
    </tr>
  </thead>
      <tbody>
        <% @bookings.each do |booking| %>
          <%= render "booking_row", booking: booking %>
        <% end %>
      </tbody>
</table>
  <% end %>

  <%= link_to "予約可能な枠を見る", time_slots_path, class: "btn btn-primary mt-3" %>
<% end %>
