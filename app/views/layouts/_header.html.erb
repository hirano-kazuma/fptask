<header class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <%= link_to root_path, id: "logo", class: "navbar-brand" do %>
      <%= image_tag "fptask_mark.png", alt: "FP予約管理システム", class: "logo-image" %>
    <% end %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Help", help_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "About", about_path, class: "nav-link" %>
        </li>
        <% if logged_in? %>
          <% if current_user.role_fp? %>
            <li class="nav-item">
              <%= link_to "予約枠作成", new_time_slot_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "予約枠一覧", time_slots_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to bookings_path, class: "nav-link position-relative" do %>
                予約一覧
                <% if pending_bookings_count > 0 %>
                  <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                    <%= pending_bookings_count %>
                    <span class="visually-hidden">未承認の予約申請</span>
                  </span>
                <% end %>
              <% end %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "予約可能な枠", time_slots_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "予約一覧", bookings_path, class: "nav-link" %>
            </li>
          <% end %>
          <li class="nav-item dropdown">
            <a href="#" id="account" class="nav-link dropdown-toggle">
              Account
            </a>
            <ul id="dropdown-menu" class="dropdown-menu dropdown-menu-end">
              <li><%= link_to "Profile", current_user, class: "dropdown-item" %></li>
              <li><%= link_to "Settings", edit_user_path(current_user), class: "dropdown-item" %></li>
              <li><hr class="dropdown-divider"></li>
              <li>
                <%= link_to "Log out", session_path,
                    data: { "turbo-method": :delete },
                    class: "dropdown-item" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Log in", new_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</header>
